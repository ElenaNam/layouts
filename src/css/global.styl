$dark = #2F343A
$gold = #C8A35F
$add = #393F47

html, body
	margin 0
	padding 0

	height 100%
	font-size 10px

*
	font-family Roboto, sans-serif
	box-sizing border-box

ul
	padding-left 0

li
	list-style none

button
	outline none
a
	color inherit
	text-decoration none

.container
	width 100%
	max-width 1160px
	padding 0 25px
	margin 0 auto

.columns
	display flex
	justify-content space-between
	align-items center
