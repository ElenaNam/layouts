$dark = #2F343A
$gold = #C8A35F
$add = #393F47

html, body
	margin 0
	padding 0

	height 100%
	font-size 10px

*
	font-family Roboto, sans-serif
	box-sizing border-box

ul
	padding-left 0

li
	list-style none

button
	outline none
a
	color inherit
	text-decoration none

.container
	width 100%
	max-width 1160px
	padding 0 20px
	margin 0 auto

.columns
	display flex
	justify-content space-between
	align-items center

.overlay
	position fixed
	top 45px
	left 0
	width 100%
	height 100%
	background $gold
	opacity .6
	z-index 100
	animation fade 0.4s
	&.hide
		animation hide 0.4s

.no-scroll
	overflow-y hidden
	height 100vh

@keyframes fade
	0%
		opacity 0
	50%
		opacity 0.3
	100%
		opacity 0.6

@keyframes hide
	0%
		opacity 0.6
	50%
		opacity 0.3
	100%
		opacity 0
